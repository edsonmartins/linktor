{
    "name": "linktor/linktor-php",
    "description": "Official PHP SDK for the Linktor API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Linktor Team",
            "email": "dev@linktor.io"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Linktor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linktor\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=6"
    }
}
